# Auto detect text files and normalize line endings to LF
* text=auto

# Source code files should always use LF
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.vue text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Rust files
*.rs text eol=lf
*.toml text eol=lf

# These files should always use CRLF on Windows
*.bat text eol=crlf
*.ps1 text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
